<div class="max-w-4xl mx-auto p-8">
  <h1 class="text-4xl font-bold text-gray-900 mb-8">Welcome to Smart Academy</h1>
  
  <div class="bg-gray-50 rounded-lg p-6 mb-8">
    <h2 class="text-2xl font-semibold text-gray-800 mb-4">Hello, <%= current_user.first_name %> <%= current_user.last_name %>!</h2>
    <div class="space-y-2 text-gray-600">
      <p><span class="font-medium">Email:</span> <%= current_user.email %></p>
      <p><span class="font-medium">Schoolpack Username:</span> <%= current_user.schoolpack_username %></p>
      <p><span class="font-medium">Member since:</span> <%= current_user.created_at.strftime("%B %d, %Y") %></p>
    </div>
  </div>

  <div class="flex gap-4">
    <%= link_to "Edit Profile", edit_user_registration_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-6 rounded-lg transition-colors" %>
    <%= button_to "Log Out", destroy_user_session_path, method: :delete, class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-3 px-6 rounded-lg transition-colors" %>
  </div>
</div>